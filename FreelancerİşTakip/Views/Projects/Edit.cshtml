@model FreelancerİşTakip.Models.Project

@{
    ViewData["Title"] = "Proje Düzenle";
}

<h1>Proje Düzenle</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CustomerId" />
            <input type="hidden" asp-for="ProposalId" />
            <input type="hidden" asp-for="UsedRevisions" />

            <div class="mb-3">
                <label asp-for="ProjectName" class="form-label"></label>
                <input asp-for="ProjectName" class="form-control" />
                <span asp-validation-for="ProjectName" class="text-danger"></span>
            </div>

            <div class="row">
                 <div class="col-md-6 mb-3">
                    <label asp-for="StartDate" class="form-label"></label>
                    <input asp-for="StartDate" class="form-control" type="date" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="TargetEndDate" class="form-label"></label>
                    <input asp-for="TargetEndDate" class="form-control" type="date" />
                </div>
            </div>

             <div class="row">
                 <div class="col-md-6 mb-3">
                    <label asp-for="Status" class="form-label"></label>
                    <select asp-for="Status" class="form-select">
                        <option value="0">Active</option>
                        <option value="1">Completed</option>
                        <option value="2">OnHold</option>
                    </select>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="RevisionLimit" class="form-label"></label>
                    <input asp-for="RevisionLimit" class="form-control" />
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Notes" class="form-label"></label>
                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
            </div>

            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-warning" />
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

