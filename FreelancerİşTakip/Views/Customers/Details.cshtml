@model FreelancerİşTakip.Models.Customer

@{
    ViewData["Title"] = "Müşteri Detayı";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@Model.Name</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Düzenle</a>
        <a asp-controller="Proposals" asp-action="Create" asp-route-customerId="@Model.Id" class="btn btn-warning">
             <i class="bi bi-file-earmark-plus"></i> Yeni Teklif
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card mb-4 shadow-sm border-warning">
            <div class="card-header bg-warning text-dark font-weight-bold">
                İletişim Bilgileri
            </div>
            <div class="card-body">
                <p><strong>@Html.DisplayNameFor(model => model.ContactName):</strong> @Model.ContactName</p>
                <p><strong>@Html.DisplayNameFor(model => model.CompanyName):</strong> @Model.CompanyName</p>
                <p><strong>@Html.DisplayNameFor(model => model.Email):</strong> <a href="mailto:@Model.Email">@Model.Email</a></p>
                <p><strong>@Html.DisplayNameFor(model => model.Phone):</strong> @Model.Phone</p>
                <p><strong>@Html.DisplayNameFor(model => model.CreatedAt):</strong> @Model.CreatedAt.ToShortDateString()</p>
                <hr>
                <p class="text-muted">@Model.Notes</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-8">
        <h4>Teklifler</h4>
        @if(Model.Proposals != null && Model.Proposals.Any())
        {
            <div class="list-group mb-4">
                @foreach(var prop in Model.Proposals)
                {
                    <a href="#" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">@prop.Title</h5>
                            <small class="text-muted">@prop.Status</small>
                        </div>
                        <p class="mb-1">Tutar: @prop.OfferedPrice @prop.Currency</p>
                    </a>
                }
            </div>
        }
        else
        {
             <div class="alert alert-light border">Henüz teklif yok.</div>
        }

        <h4>Projeler</h4>
        @if(Model.Projects != null && Model.Projects.Any())
        {
            <div class="list-group">
                @foreach(var proj in Model.Projects)
                {
                     <a href="#" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">@proj.ProjectName</h5>
                            <small>@proj.Status</small>
                        </div>
                    </a>
                }
            </div>
        }
        else
        {
            <div class="alert alert-light border">Henüz proje yok.</div>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary">Listeye Dön</a>
</div>

