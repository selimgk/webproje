@model FreelancerİşTakip.Models.User

@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-4">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-dark text-white text-center py-4">
                <h3 class="mb-0">
                    WorkFlow<span style="color:#FFD700;">X</span>
                </h3>
                <small class="text-muted text-uppercase" style="letter-spacing: 2px;">Yeni Üyelik</small>
            </div>
            <div class="card-body p-4">
                @if(ViewBag.Error != null)
                {
                    <div class="alert alert-danger">@ViewBag.Error</div>
                }

                <form asp-action="Register" method="post">
                    
                    <div class="mb-3">
                        <label asp-for="Username" class="form-label">Kullanıcı Adı</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i class="bi bi-person"></i></span>
                            <input asp-for="Username" class="form-control border-start-0" placeholder="Kullanıcı Adı Seçin" required autofocus />
                        </div>
                        <span asp-validation-for="Username" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Password" class="form-label">Şifre</label>
                        <div class="input-group">
                             <span class="input-group-text bg-light border-end-0"><i class="bi bi-lock"></i></span>
                            <input asp-for="Password" type="password" class="form-control border-start-0" placeholder="Bir şifre belirleyin" required />
                        </div>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2 mb-3">
                        <button type="submit" class="btn btn-warning btn-lg fw-bold text-dark shadow-sm">
                            KAYDI TAMAMLA <i class="bi bi-check-lg"></i>
                        </button>
                    </div>

                    <div class="text-center">
                        <span class="text-muted small">Zaten hesabınız var mı?</span>
                        <a asp-action="Login" class="text-decoration-none fw-bold text-dark small">Giriş Yap</a>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center bg-light py-3 border-0">
                <small class="text-muted">&copy; 2026 WorkFlowX Project System</small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
