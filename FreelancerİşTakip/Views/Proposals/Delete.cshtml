@model FreelancerİşTakip.Models.Proposal

@{
    ViewData["Title"] = "Teklif Sil";
}

<h1>Teklif Sil</h1>

<div class="alert alert-danger">
    <h3>Bu teklifi silmek istediğinize emin misiniz?</h3>
</div>

<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.Customer)</dt>
        <dd class = "col-sm-10">@(Model.Customer?.Name)</dd>
        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.OfferedPrice)</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.OfferedPrice)</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>

