@model IEnumerable<FreelancerİşTakip.Models.Proposal>

@{
    ViewData["Title"] = "Teklifler";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Teklifler</h1>
    <a asp-action="Create" class="btn btn-warning">
        <i class="bi bi-file-earmark-plus"></i> Yeni Teklif
    </a>
</div>

<table class="table table-hover">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.Customer)</th>
            <th>@Html.DisplayNameFor(model => model.OfferedPrice)</th>
            <th>@Html.DisplayNameFor(model => model.Status)</th>
            <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    var statusBadge = "bg-secondary";
    if (item.Status == FreelancerİşTakip.Models.ProposalStatus.Approved) statusBadge = "bg-success";
    if (item.Status == FreelancerİşTakip.Models.ProposalStatus.Sent) statusBadge = "bg-primary";
    if (item.Status == FreelancerİşTakip.Models.ProposalStatus.Rejected) statusBadge = "bg-danger";

    var statusText = item.Status switch {
        FreelancerİşTakip.Models.ProposalStatus.Draft => "Taslak",
        FreelancerİşTakip.Models.ProposalStatus.Sent => "Gönderildi",
        FreelancerİşTakip.Models.ProposalStatus.Approved => "Onaylandı",
        FreelancerİşTakip.Models.ProposalStatus.Rejected => "Reddedildi",
        FreelancerİşTakip.Models.ProposalStatus.Expired => "Süresi Doldu",
        _ => item.Status.ToString()
    };
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Title)</td>
            <td>@(item.Customer?.Name ?? "-")</td>
            <td>@Html.DisplayFor(modelItem => item.OfferedPrice) ₺</td>
            <td><span class="badge @statusBadge">@statusText</span></td>
            <td>@item.CreatedAt.ToShortDateString()</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-dark">Düzenle</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detay</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>

