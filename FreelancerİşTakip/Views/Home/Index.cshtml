@{
    ViewData["Title"] = "Executive Dashboard";
}

<!-- HERO WELCOME SECTION -->
<div class="card-pro border-0 overflow-hidden mb-5 bg-dark text-white position-relative">
    <!-- Hero Image Background with Overlay -->
    <div class="position-absolute top-0 start-0 w-100 h-100" 
         style="background-image: url('https://images.unsplash.com/photo-1497215728101-856f4ea42174?auto=format&fit=crop&w=2000&q=80'); background-size: cover; background-position: center; opacity: 0.4;">
    </div>
    
    <div class="card-body-pro position-relative p-5">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <span class="badge bg-warning text-dark mb-3 fw-bold px-3 py-2">WORKFLOW SUITE</span>
                <h1 class="display-4 fw-bold mb-3">
                    Welcome back, <span class="text-accent fst-italic">Architect.</span>
                </h1>
                <p class="lead text-light opacity-75 mb-4" style="max-width: 600px;">
                    Manage your proposals, track client projects, and analyze your agency's growth from a single command center.
                </p>
                <div class="d-flex gap-3">
                    <a asp-controller="Projects" asp-action="Index" class="btn btn-accent px-4 py-2">
                        <i class="bi bi-folder2-open me-2"></i> View Projects
                    </a>
                    <a asp-controller="Reports" asp-action="Index" class="btn btn-outline-light px-4 py-2">
                        <i class="bi bi-graph-up me-2"></i> Analytics
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- STATS ROW -->
<div class="row g-4 mb-5">
    <div class="col-md-3">
        <div class="d-flex align-items-center bg-white p-3 rounded-4 shadow-sm border">
            <div class="round-icon bg-light-gray p-3 rounded-circle me-3 text-dark">
                 <i class="bi bi-people-fill fs-4"></i>
            </div>
            <div>
                <h4 class="fw-bold mb-0">@ViewBag.ActiveClients</h4>
                <small class="text-muted">Active Clients</small>
            </div>
            <span class="ms-auto badge bg-success bg-opacity-10 text-success">Live</span>
        </div>
    </div>
    <div class="col-md-3">
        <div class="d-flex align-items-center bg-white p-3 rounded-4 shadow-sm border">
            <div class="round-icon bg-light-gray p-3 rounded-circle me-3 text-dark">
                 <i class="bi bi-briefcase-fill fs-4"></i>
            </div>
            <div>
                <h4 class="fw-bold mb-0">@ViewBag.ActiveProjects</h4>
                <small class="text-muted">Running Projects</small>
            </div>
            <span class="ms-auto badge bg-warning bg-opacity-10 text-warning">Busy</span>
        </div>
    </div>
    <div class="col-md-3">
        <div class="d-flex align-items-center bg-white p-3 rounded-4 shadow-sm border">
            <div class="round-icon bg-light-gray p-3 rounded-circle me-3 text-dark">
                 <i class="bi bi-file-earmark-text-fill fs-4"></i>
            </div>
            <div>
                <h4 class="fw-bold mb-0">@ViewBag.PendingProposals</h4>
                <small class="text-muted">Pending Proposals</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="d-flex align-items-center bg-dark text-white p-3 rounded-4 shadow-sm border border-dark">
            <div class="round-icon bg-white bg-opacity-10 p-3 rounded-circle me-3 text-warning">
                 <i class="bi bi-currency-dollar fs-4"></i>
            </div>
            <div>
                <h4 class="fw-bold mb-0 text-accent">@ViewBag.MonthlyRevenue ₺</h4>
                <small class="text-white-50">Rev. this Month</small>
            </div>
        </div>
    </div>
</div>

<!-- MODULES GRID WITH IMAGES -->
<h4 class="mb-4 fw-bold text-dark px-1">Management Modules</h4>
<div class="row g-4 mb-5">
    <!-- CUSTOMERS -->
    <div class="col-md-6 col-lg-3">
        <a asp-controller="Customers" asp-action="Index" class="text-decoration-none card-hover-effect d-block">
            <div class="card-pro h-100 p-0 overflow-hidden position-relative group">
                <div class="crop-image-container" style="height: 180px;">
                    <img src="https://images.unsplash.com/photo-1556761175-b413da4baf72?auto=format&fit=crop&w=800&q=80" 
                         class="w-100 h-100 object-fit-cover" alt="Customers">
                </div>
                <div class="card-body-pro">
                    <div class="d-flex align-items-center justify-content-between mb-2">
                        <h5 class="text-dark fw-bold mb-0">Customers</h5>
                        <i class="bi bi-arrow-right-circle text-muted fs-5"></i>
                    </div>
                    <p class="text-muted small mb-0">Manage client database and relationships.</p>
                </div>
            </div>
        </a>
    </div>

    <!-- PROJECTS -->
    <div class="col-md-6 col-lg-3">
        <a asp-controller="Projects" asp-action="Index" class="text-decoration-none card-hover-effect d-block">
            <div class="card-pro h-100 p-0 overflow-hidden">
                <div class="crop-image-container" style="height: 180px;">
                    <img src="https://images.unsplash.com/photo-1531403009284-440f080d1e12?auto=format&fit=crop&w=800&q=80" 
                         class="w-100 h-100 object-fit-cover" alt="Projects">
                </div>
                <div class="card-body-pro">
                    <div class="d-flex align-items-center justify-content-between mb-2">
                        <h5 class="text-dark fw-bold mb-0">Projects</h5>
                        <i class="bi bi-arrow-right-circle text-muted fs-5"></i>
                    </div>
                    <p class="text-muted small mb-0">Track development, timelines and tasks.</p>
                </div>
            </div>
        </a>
    </div>

    <!-- PROPOSALS -->
    <div class="col-md-6 col-lg-3">
        <a asp-controller="Proposals" asp-action="Index" class="text-decoration-none card-hover-effect d-block">
            <div class="card-pro h-100 p-0 overflow-hidden">
                <div class="crop-image-container" style="height: 180px;">
                    <img src="https://images.unsplash.com/photo-1554224155-8d04cb21cd6c?auto=format&fit=crop&w=800&q=80" 
                         class="w-100 h-100 object-fit-cover" alt="Proposals">
                </div>
                <div class="card-body-pro">
                    <div class="d-flex align-items-center justify-content-between mb-2">
                        <h5 class="text-dark fw-bold mb-0">Proposals</h5>
                        <i class="bi bi-arrow-right-circle text-muted fs-5"></i>
                    </div>
                    <p class="text-muted small mb-0">Create and track business proposals.</p>
                </div>
            </div>
        </a>
    </div>

    <!-- REPORTS -->
    <div class="col-md-6 col-lg-3">
        <a asp-controller="Reports" asp-action="Index" class="text-decoration-none card-hover-effect d-block">
            <div class="card-pro h-100 p-0 overflow-hidden">
                <div class="crop-image-container" style="height: 180px;">
                    <img src="https://images.unsplash.com/photo-1460925895917-afdab827c52f?auto=format&fit=crop&w=800&q=80" 
                         class="w-100 h-100 object-fit-cover" alt="Reports">
                </div>
                <div class="card-body-pro">
                    <div class="d-flex align-items-center justify-content-between mb-2">
                        <h5 class="text-dark fw-bold mb-0">Reports</h5>
                        <i class="bi bi-arrow-right-circle text-muted fs-5"></i>
                    </div>
                    <p class="text-muted small mb-0">Financial insights and performance.</p>
                </div>
            </div>
        </a>
    </div>
</div>
