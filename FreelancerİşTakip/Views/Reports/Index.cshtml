@{
    ViewData["Title"] = "Raporlar";
    var statusCounts = ViewBag.StatusCounts as dynamic;
    var lossReasons = ViewBag.LossReasons as dynamic;
}

<div class="mb-4">
    <h1>Yönetici Raporları</h1>
    <p class="text-muted">Finansal durum ve operasyonel metriklerin genel özeti.</p>
</div>

<!-- Summary Cards Row -->
<div class="row mb-4">
    <div class="col-md-6 mb-4">
        <div class="card shadow-sm border-0 h-100 bg-black text-white">
            <div class="card-body d-flex flex-column justify-content-center text-center p-4">
                <i class="bi bi-wallet2 display-4 mb-3 text-warning"></i>
                <h5 class="card-title text-uppercase letter-spacing-1 opacity-75">Toplam Onaylanan Ciro</h5>
                <h1 class="display-3 fw-bold my-2 text-warning">@ViewBag.TotalRevenue ₺</h1>
                <p class="mb-0 text-white-50 small">Tüm zamanların onaylanan teklif tutarı</p>
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-4">
        <div class="card shadow-sm border-0 h-100 bg-white">
            <div class="card-body d-flex flex-column justify-content-center text-center p-4">
                <i class="bi bi-activity display-4 mb-3 text-warning"></i>
                <h5 class="card-title text-dark text-uppercase letter-spacing-1">Son 30 Gün Aktivitesi</h5>
                <h1 class="display-3 fw-bold my-2 text-dark">@ViewBag.RecentSent <span class="fs-4 text-muted">Teklif</span></h1>
                <p class="mb-0 text-muted">Son 30 günde gönderilen teklif sayısı</p>
            </div>
        </div>
    </div>
</div>

<!-- Detailed Metrics Row -->
<div class="row">
    <!-- Status Table -->
    <div class="col-lg-6 mb-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-header bg-white py-3 border-0">
                <h5 class="mb-0 fw-bold"><i class="bi bi-pie-chart-fill text-warning me-2"></i> Teklif Durum Dağılımı</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0 align-middle">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4">Durum</th>
                                <th class="text-end pe-4">Adet</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if(statusCounts != null)
                            {
                                foreach(var item in statusCounts)
                                {
                                    <tr>
                                        <td class="ps-4 fw-bold text-secondary">@item.Status</td>
                                        <td class="text-end pe-4">
                                            <span class="badge bg-light text-dark border rounded-pill px-3 py-2">@item.Count</span>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Loss Reasons -->
    <div class="col-lg-6 mb-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-header bg-white py-3 border-0">
                <h5 class="mb-0 fw-bold"><i class="bi bi-graph-down-arrow text-danger me-2"></i> Kayıp Analizi</h5>
            </div>
            <div class="card-body">
                 @if(lossReasons != null)
                {
                    <ul class="list-group list-group-flush">
                        @foreach(var item in lossReasons)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 py-3">
                                <span class="fw-medium">@item.Reason</span>
                                <div class="progress w-25 ms-3" style="height: 8px;">
                                    <div class="progress-bar bg-danger" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <span class="badge bg-danger rounded-pill ms-3">@item.Count</span>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <div class="text-center py-5 text-muted">
                        <i class="bi bi-inbox display-6 d-block mb-3"></i>
                        Veri yok.
                    </div>
                }
            </div>
        </div>
    </div>
</div>
