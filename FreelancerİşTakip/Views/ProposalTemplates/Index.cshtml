@model IEnumerable<FreelancerİşTakip.Models.ProposalTemplate>

@{
    ViewData["Title"] = "Teklif Şablonları";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Teklif Şablonları</h1>
    <a asp-action="Create" class="btn btn-warning">
        <i class="bi bi-plus-lg"></i> Yeni Şablon
    </a>
</div>

<table class="table table-hover">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.TemplateName)</th>
            <th>@Html.DisplayNameFor(model => model.DefaultDeliveryDays)</th>
            <th>@Html.DisplayNameFor(model => model.DefaultHourlyRate)</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.TemplateName)</td>
            <td>@Html.DisplayFor(modelItem => item.DefaultDeliveryDays) Gün</td>
            <td>@Html.DisplayFor(modelItem => item.DefaultHourlyRate) ₺</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-dark">Düzenle</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detay</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>

