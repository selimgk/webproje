@model FreelancerİşTakip.Models.ProposalTemplate

@{
    ViewData["Title"] = "Yeni Şablon";
}

<h1>Yeni Şablon</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="mb-3">
                <label asp-for="TemplateName" class="form-label"></label>
                <input asp-for="TemplateName" class="form-control" />
                <span asp-validation-for="TemplateName" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="DefaultHourlyRate" class="form-label"></label>
                     <div class="input-group">
                        <input asp-for="DefaultHourlyRate" class="form-control" />
                        <span class="input-group-text">₺</span>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="DefaultEstimatedHours" class="form-label"></label>
                    <input asp-for="DefaultEstimatedHours" class="form-control" />
                </div>
            </div>

             <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="DefaultDeliveryDays" class="form-label"></label>
                    <input asp-for="DefaultDeliveryDays" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="DefaultRevisionLimit" class="form-label"></label>
                    <input asp-for="DefaultRevisionLimit" class="form-control" />
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="DefaultScopeText" class="form-label"></label>
                <textarea asp-for="DefaultScopeText" class="form-control" rows="8"></textarea>
                <div class="form-text">Bu metin teklif oluştururken varsayılan olarak gelecektir.</div>
                <span asp-validation-for="DefaultScopeText" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-warning" />
                <a asp-action="Index" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

