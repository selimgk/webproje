@model FreelancerİşTakip.Models.ProposalTemplate

@{
    ViewData["Title"] = "Şablon Detayı";
}

<h1>@Model.TemplateName</h1>

<div class="card shadow-sm mt-4">
    <div class="card-header bg-dark text-white">
        Şablon Özellikleri
    </div>
    <div class="card-body">
         <dl class="row">
            <dt class = "col-sm-3">@Html.DisplayNameFor(model => model.DefaultDeliveryDays)</dt>
            <dd class = "col-sm-9">@Html.DisplayFor(model => model.DefaultDeliveryDays) Gün</dd>
            
            <dt class = "col-sm-3">@Html.DisplayNameFor(model => model.DefaultRevisionLimit)</dt>
            <dd class = "col-sm-9">@Html.DisplayFor(model => model.DefaultRevisionLimit) Adet</dd>
            
            <dt class = "col-sm-3">@Html.DisplayNameFor(model => model.DefaultHourlyRate)</dt>
            <dd class = "col-sm-9">@Html.DisplayFor(model => model.DefaultHourlyRate) ₺</dd>

            <dt class = "col-sm-3">@Html.DisplayNameFor(model => model.DefaultEstimatedHours)</dt>
            <dd class = "col-sm-9">@Html.DisplayFor(model => model.DefaultEstimatedHours) Saat</dd>
        </dl>
    </div>
</div>

<div class="card shadow-sm mt-4">
    <div class="card-header bg-warning">
        @Html.DisplayNameFor(model => model.DefaultScopeText)
    </div>
    <div class="card-body">
        <p style="white-space: pre-wrap;">@Model.DefaultScopeText</p>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Düzenle</a>
    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
</div>

